ARG TARGETPLATFORM=linux/amd64

ARG OS=ubuntu

FROM falkordb/falkordb-build:$OS-dd4534cfeac95f6902de3b054caead580aa14f0c AS builder

ARG DEBUG=0

WORKDIR /FalkorDB

COPY . /FalkorDB

RUN make DEBUG=$DEBUG

RUN mkdir -p /FalkorDB/bin/src && cp -r /FalkorDB/bin/linux*/src/falkordb.so /FalkorDB/bin/src/falkordb.so