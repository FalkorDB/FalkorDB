ARG TARGETPLATFORM=linux/amd64

ARG OS=ubuntu

FROM falkordb/falkordb-build:$OS-ff80f19eb70382792c691ea6b2f6bb7f76de957c AS builder

ARG DEBUG=0

WORKDIR /FalkorDB

COPY . /FalkorDB
RUN rustup default stable
RUN make DEBUG=$DEBUG

RUN mkdir -p /FalkorDB/bin/src && cp -r /FalkorDB/bin/linux*/src/falkordb.so /FalkorDB/bin/src/falkordb.so