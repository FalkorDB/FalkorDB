FROM --platform=$TARGETPLATFORM falkordb/falkordb-build:latest

ARG TARGETPLATFORM

WORKDIR /FalkorDB

ADD . /FalkorDB

RUN make

ENV ARCH=${TARGETPLATFORM}

EXPOSE 6379/tcp

ENV FALKORDB_ARGS="MAX_QUEUED_QUERIES 25 TIMEOUT 1000 RESULTSET_SIZE 10000"

RUN echo ${MODULE_DIR}

CMD /FalkorDB/build/docker/run.sh
                 
